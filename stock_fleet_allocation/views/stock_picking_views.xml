<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_fleet_allocation" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.fleet.allocation</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="allocation_type"/>
                <field name="fleet_vehicle_id" invisible="allocation_type != 'fleet'" required="allocation_type == 'fleet'"/>
                <field name="equipment_id" invisible="allocation_type != 'equipment'" required="allocation_type == 'equipment'"/>
                <field name="fleet_service_type_id" invisible="not allocation_type" required="allocation_type"/>
            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="domain">[('code', '=', 'internal')]</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_fleet_service" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-wrench" 
                        invisible="not fleet_service_id"
                        string="Fleet Service"/>
            </xpath>
        </field>
    </record>
</odoo>
