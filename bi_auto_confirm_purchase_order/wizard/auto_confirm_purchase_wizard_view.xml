<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="auto_confirm_purchase_wizard_view_form" model="ir.ui.view">
        <field name="name">auto.confirm.purchase.wizard.view.form</field>
        <field name="model">confirm.purchase.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="purchase_order_ids" widget='many2many_tags'/>
                        <field name="account_journal_id" required="1"/>
                        <field name="stock_warehouse_id" required="1"/>
                    </group>
                    <footer>
                        <button name="button_action_confirm_purchase" string="Confirm Orders" type="object"
                                class="btn-primary"/>
                        <button name="cancel" string="Cancel" class="btn-primary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="auto_confirm_purchase_wizard_action" model="ir.actions.act_window">
        <field name="name">Auto Confirm Purchase Order</field>
        <field name="res_model">confirm.purchase.wizard</field>
        <field name="view_mode">form</field>
    </record>

</odoo>