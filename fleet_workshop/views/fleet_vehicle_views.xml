<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_view_form_inherit_workshop" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.workshop</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_work_orders" type="object" class="oe_stat_button" icon="fa-wrench">
                    <field name="work_order_count" widget="statinfo" string="Job Cards"/>
                </button>
            </div>
            <xpath expr="//field[@name='odometer']" position="after">
                <field name="last_service_odometer"/>
                <field name="service_interval"/>
                <field name="next_service_odometer"/>
                <field name="service_due" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
