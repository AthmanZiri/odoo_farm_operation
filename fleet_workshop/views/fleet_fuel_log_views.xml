<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_log_services_view_form_inherit_workshop" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.services.form.inherit.workshop</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_stock_move" string="Post to Inventory" type="object" class="oe_highlight" invisible="stock_move_id"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='vehicle_id']" position="after">
                <field name="location_id"/>
                <field name="product_id"/>
                <field name="pump_attendant_id"/>
                <field name="liter"/>
                <field name="price_per_liter"/>
                <field name="stock_move_id" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_fleet_fuel_log_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.services.fuel.tree</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="arch" type="xml">
            <list string="Fuel Logs">
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="product_id"/>
                <field name="liter"/>
                <field name="price_per_liter"/>
                <field name="amount"/>
                <field name="stock_move_id"/>
            </list>
        </field>
    </record>

    <record id="action_fleet_fuel_log" model="ir.actions.act_window">
        <field name="name">Fuel Logs</field>
        <field name="res_model">fleet.vehicle.log.services</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_fleet_fuel_log_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Log a new fueling event
          </p>
        </field>
    </record>

    <menuitem id="menu_fleet_fuel_log"
              name="Fuel Logs"
              parent="fleet.menu_fleet_reporting"
              action="action_fleet_fuel_log"
              sequence="2"/>
</odoo>
