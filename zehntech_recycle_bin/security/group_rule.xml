<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Module category -->
        <record model="ir.module.category" id="module_category_recycle_bin">
            <field name="name">Recycle Bin</field>
            <field name="description">Helps you manage your Deleted Records</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- Groups -->
        <record id="group_super_admin" model="res.groups">
            <field name="name">Admin</field>
        </record>
        
        <record id="group_admin" model="res.groups">
            <field name="name">Manager</field>
        </record>
        
        <record id="group_user" model="res.groups">
            <field name="name">User</field>
        </record>
        
        <!-- Record Rules -->
        <record id="rule_recycle_bin_super_admin" model="ir.rule">
            <field name="name">Recycle Bin Super Admin</field>
            <field name="model_id" ref="model_recycle_bin" />
            <field name="groups" eval="[(4, ref('zehntech_recycle_bin.group_super_admin'))]" />
            <field name="domain_force">[]</field>
        </record>
        
        <record id="rule_recycle_bin_admin" model="ir.rule">
            <field name="name">Recycle Bin Admin</field>
            <field name="model_id" ref="model_recycle_bin" />
            <field name="groups" eval="[(4, ref('zehntech_recycle_bin.group_admin'))]" />
            <field name="domain_force">[]</field>
        </record>
        
        <record id="rule_recycle_bin_user" model="ir.rule">
            <field name="name">Recycle Bin User</field>
            <field name="model_id" ref="model_recycle_bin" />
            <field name="groups" eval="[(4, ref('zehntech_recycle_bin.group_user'))]" />
            <field name="domain_force">[]</field>
        </record>
    </data>
</odoo>