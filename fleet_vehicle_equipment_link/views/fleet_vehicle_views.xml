<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_view_form_inherit_equipment" model="ir.ui.view">
        <field name="name">fleet.vehicle.view.form.inherit.equipment</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_equipment"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-wrench"
                    invisible="not equipment_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Equipment</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
