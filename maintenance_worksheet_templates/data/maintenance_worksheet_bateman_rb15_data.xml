            <field name="res_model">maintenance.request</field>
        </record>

        <function model="worksheet.template" name="_preload_maintenance_templates">
            <value eval="'maintenance_worksheet_templates.template_bateman_rb15_250h'"/>
            <value eval="[
                {'name': 'x_inspect_air_intake_rb15', 'string': 'INSPECT: Air Intake System'},
                {'name': 'x_inspect_plastic_bag_rb15', 'string': 'INSPECT: Put Plastic Bag over Primary Engine Air Filter'},
