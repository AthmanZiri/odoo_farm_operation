                            <group string="SERVICE">
                                <field name="x_service_valve_lapping"/>
                                <field name="x_service_valve_oil_seal"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
