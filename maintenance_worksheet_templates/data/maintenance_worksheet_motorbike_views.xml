            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="CLEAN">
                                <field name="x_clean_oil_strainer"/>
                            </group>
                            <group string="REPLACE">
                                <field name="x_replace_air_cleaner_10000"/>
                                <field name="x_replace_spark_plug"/>
                                <field name="x_replace_front_fork_oil"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- Template 4: Motorbike - 15,000 km Service -->
        <!-- ========================================== -->
        <record id="view_motorbike_15000km" model="ir.ui.view">
