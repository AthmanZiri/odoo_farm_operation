<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ========================================== -->
        <!-- Template 1: Motorbike - 2,500 km Service -->
        <!-- ========================================== -->
        <record id="view_motorbike_2500km" model="ir.ui.view">
            <field name="name">motorbike.2500km.form</field>
            <field name="model" model="ir.model" eval="obj().env.ref('maintenance_worksheet_templates.template_motorbike_2500km').model_id.model"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="LUBRICATE">
                                <field name="x_lubricate_drive_chain"/>
                                <field name="x_lubricate_general"/>
                            </group>
                            <group string="CHECK / ADJUST">
                                <field name="x_check_battery_electrolyte"/>
                                <field name="x_check_carburetor"/>
                                <field name="x_check_brake_light_switch"/>
                                <field name="x_check_clutch_play"/>
                                <field name="x_check_throttle_play"/>
                                <field name="x_check_tps"/>
                                <field name="x_check_front_brake_lever"/>
                                <field name="x_check_rear_brake_lever"/>
                                <field name="x_check_steering_play"/>
                                <field name="x_check_spoke_tightness"/>
                                <field name="x_check_drive_chain_slack"/>
                            </group>
                            <group string="CHECK / REPLACE">
                                <field name="x_replace_air_cleaner_2500"/>
                                <field name="x_check_fuel_leakages"/>
                                <field name="x_clean_spark_plug"/>
                                <field name="x_check_brake_lining"/>
                                <field name="x_check_tyre_tread"/>
                                <field name="x_check_rear_shock"/>
                            </group>
                            <group string="TIGHTEN">
                                <field name="x_tighten_fasteners"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- Template 2: Motorbike - 5,000 km Service -->
