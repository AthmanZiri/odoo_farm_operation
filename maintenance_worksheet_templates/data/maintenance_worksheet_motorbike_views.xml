                <form>
                    <sheet>
                        <group>
                            <group string="REPLACE">
                                <field name="x_replace_fuel_pipes"/>
                            </group>
                            <group string="LUBRICATE">
                                <field name="x_lubricate_steering_stem"/>
                                <field name="x_lubricate_wheel_bearing"/>
                                <field name="x_lubricate_swing_arm"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- Template 5: Motorbike - 30,000 km Service -->
