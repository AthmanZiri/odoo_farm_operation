            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="CHECK / ADJUST">
                                <field name="x_check_valve_tappet"/>
                                <field name="x_check_front_fork"/>
                            </group>
                            <group string="REPLACE">
                                <field name="x_replace_engine_oil_moto"/>
                                <field name="x_replace_oil_filter_moto"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- Template 3: Motorbike - 10,000 km Service -->
