<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Equipment Category -->
        <record id="maintenance_category_tractors" model="maintenance.equipment.category">
            <field name="name">Tractors</field>
        </record>

        <!-- ========================================== -->
        <!-- Template 1: JD 8230 - 250 Hour Service -->
        <!-- ========================================== -->
        <record id="template_jd8230_250h" model="worksheet.template">
            <field name="name">JD 8230 - 250 Hour Service</field>
            <field name="res_model">maintenance.request</field>
        </record>

        <function model="worksheet.template" name="_preload_maintenance_templates">
            <value eval="'maintenance_worksheet_templates.template_jd8230_250h'"/>
            <value eval="[
                {'name': 'x_clean_fuel_tank_sump', 'string': 'CLEAN: Fuel Tank Sump'},
                {'name': 'x_clean_fuel_tank_vent_filter', 'string': 'CLEAN: Fuel Tank Vent Filter'},
                {'name': 'x_clean_recirculation_filter', 'string': 'CLEAN: Recirculation Filter'},
                {'name': 'x_grease_front_axle', 'string': 'GREASE: Front Axle Components'},
                {'name': 'x_inspect_engine_air_filter', 'string': 'INSPECT: Engine Air Filter (Plastic bag)'},
                {'name': 'x_inspect_neutral_start', 'string': 'INSPECT: Neutral Start System'},
                {'name': 'x_inspect_park_position', 'string': 'INSPECT: Park Position'},
                {'name': 'x_inspect_wheel_bolts', 'string': 'INSPECT: Wheel &amp; Weight Bolts'},
                {'name': 'x_inspect_tyre_pressures', 'string': 'INSPECT: Tyre Pressures'},
                {'name': 'x_inspect_battery_lights', 'string': 'INSPECT: Battery &amp; Lights'},
                {'name': 'x_inspect_fan_belts', 'string': 'INSPECT: Fan/Belts/Tensioners'},
                {'name': 'x_inspect_brakes', 'string': 'INSPECT: Brakes'},
                {'name': 'x_inspect_mfwd_diff_oil', 'string': 'INSPECT: MFWD Diff Case Oil Level'},
                {'name': 'x_inspect_mfwd_hub_oil', 'string': 'INSPECT: MFWD Wheel Hub Oil Level'},
            ]"/>
        </function>

        <record id="view_jd8230_250h" model="ir.ui.view">
            <field name="name">jd8230.250h.form</field>
            <field name="model" model="ir.model" eval="obj().env.ref('maintenance_worksheet_templates.template_jd8230_250h').model_id.model"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="CLEAN">
                                <field name="x_clean_fuel_tank_sump"/>
                                <field name="x_clean_fuel_tank_vent_filter"/>
                                <field name="x_clean_recirculation_filter"/>
                            </group>
                            <group string="GREASE">
                                <field name="x_grease_front_axle"/>
                            </group>
                            <group string="INSPECT">
                                <field name="x_inspect_engine_air_filter"/>
                                <field name="x_inspect_neutral_start"/>
                                <field name="x_inspect_park_position"/>
                                <field name="x_inspect_wheel_bolts"/>
                                <field name="x_inspect_tyre_pressures"/>
                                <field name="x_inspect_battery_lights"/>
                                <field name="x_inspect_fan_belts"/>
                                <field name="x_inspect_brakes"/>
                                <field name="x_inspect_mfwd_diff_oil"/>
                                <field name="x_inspect_mfwd_hub_oil"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- Template 2: JD 8230 - 500 Hour Service -->
        <!-- ========================================== -->
        <record id="template_jd8230_500h" model="worksheet.template">
