                {'name': 'x_change_hyd_oil', 'string': 'CHANGE FLUIDS: Hydraulic Oil'},
                {'name': 'x_change_mfwd_diff_oil', 'string': 'CHANGE FLUIDS: MFWD Diff Case Oil'},
                {'name': 'x_change_front_hub_oil', 'string': 'CHANGE FLUIDS: Front Wheel Hub Oil'},
                {'name': 'x_change_trans_filter', 'string': 'CHANGE FILTERS: Transmission Oil Filter'},
                {'name': 'x_change_hyd_filter', 'string': 'CHANGE FILTERS: Hydraulic Oil Filter'},
                {'name': 'x_clean_trans_screen', 'string': 'CLEAN: Transmission Filter Screen'},
                {'name': 'x_clean_hyd_screen', 'string': 'CLEAN: Hydraulic Oil Suction Screen'},
                {'name': 'x_clean_oil_reservoir', 'string': 'CLEAN: Oil Reservoir (Drain &amp; Clean)'},
                {'name': 'x_grease_draft_link', 'string': 'GREASE: Draft Link Support Bushing'},
