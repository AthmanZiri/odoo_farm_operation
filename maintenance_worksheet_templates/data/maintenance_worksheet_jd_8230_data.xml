                            <group string="CHANGE">
                                <field name="x_change_engine_oil"/>
                                <field name="x_change_fuel_filters"/>
                            </group>
                            <group string="INSPECT">
                                <field name="x_inspect_coolant_weep"/>
                                <field name="x_inspect_air_intake"/>
                                <field name="x_inspect_trans_oil"/>
                                <field name="x_inspect_brake_fluid"/>
                            </group>
                            <group string="CLEAN">
                                <field name="x_clean_primary_air_filter"/>
                                <field name="x_clean_mfwd_vent"/>
                            </group>
                            <group string="TEST">
                                <field name="x_test_coolant"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

