                            <group string="CHANGE FLUIDS">
                                <field name="x_change_trans_oil"/>
                                <field name="x_change_hyd_oil"/>
                                <field name="x_change_mfwd_diff_oil"/>
                                <field name="x_change_front_hub_oil"/>
                            </group>
                            <group string="CHANGE FILTERS">
                                <field name="x_change_trans_filter"/>
                                <field name="x_change_hyd_filter"/>
                            </group>
                            <group string="CLEAN">
                                <field name="x_clean_trans_screen"/>
                                <field name="x_clean_hyd_screen"/>
                                <field name="x_clean_oil_reservoir"/>
                            </group>
                            <group string="GREASE">
                                <field name="x_grease_draft_link"/>
                            </group>
                        </group>
                        <group>
