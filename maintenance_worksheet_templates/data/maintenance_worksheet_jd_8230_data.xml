                {'name': 'x_change_engine_oil', 'string': 'CHANGE: Engine Oil &amp; Filter'},
                {'name': 'x_change_fuel_filters', 'string': 'CHANGE: Both Fuel Filters'},
                {'name': 'x_inspect_coolant_weep', 'string': 'INSPECT: Coolant Pump Weep Hole'},
                {'name': 'x_inspect_air_intake', 'string': 'INSPECT: Engine Air Intake System'},
                {'name': 'x_inspect_trans_oil', 'string': 'INSPECT: Transmission Oil Level'},
                {'name': 'x_inspect_brake_fluid', 'string': 'INSPECT: Brake Fluid Level'},
                {'name': 'x_clean_primary_air_filter', 'string': 'CLEAN: Primary Engine Air Filter'},
                {'name': 'x_clean_mfwd_vent', 'string': 'CLEAN: MFWD Axle Vent Filter'},
                {'name': 'x_test_coolant', 'string': 'TEST: Coolant Condition (Strips)'},
            ]"/>
        </function>

        <record id="view_jd8230_500h" model="ir.ui.view">
            <field name="name">jd8230.500h.form</field>
            <field name="model" model="ir.model" eval="obj().env.ref('maintenance_worksheet_templates.template_jd8230_500h').model_id.model"/>
