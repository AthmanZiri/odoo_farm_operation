<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Fleet Vehicle Log Services Form View -->
    <record id="fleet_vehicle_log_services_view_form_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.services.form.inherit</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
        <field name="arch" type="xml">
            <!-- Add smart buttons -->
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_create_maintenance_request" type="object" string="Create Maintenance Request" 
                            class="btn-primary" invisible="maintenance_request_id or not vehicle_id"/>
                    <button name="action_create_repair_order" type="object" string="Create Repair Order" 
                            class="btn-primary" invisible="repair_order_id or not vehicle_id"/>
                </header>
            </xpath>
            
            <!-- Add smart buttons for viewing linked records -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_maintenance_request" type="object" class="oe_stat_button" 
                        icon="fa-tasks" invisible="not maintenance_request_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Maintenance</span>
                    </div>
                </button>
                <button name="action_view_repair_order" type="object" class="oe_stat_button" 
                        icon="fa-wrench" invisible="not repair_order_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Repair</span>
                    </div>
                </button>
            </xpath>
            
            <!-- Add linked record fields -->
            <xpath expr="//field[@name='vendor_id']" position="after">
                <field name="maintenance_request_id" readonly="1" invisible="not maintenance_request_id"/>
                <field name="repair_order_id" readonly="1" invisible="not repair_order_id"/>
            </xpath>
        </field>
    </record>
</odoo>
