<odoo>
    <record id="view_fleet_tire_operation_wizard_form" model="ir.ui.view">
        <field name="name">fleet.tire.operation.wizard.form</field>
        <field name="model">fleet.tire.operation.wizard</field>
        <field name="arch" type="xml">
            <form string="Tire Operation">
                <group>
                    <group>
                        <field name="tire_id" readonly="1"/>
                        <field name="operation_type" widget="radio"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="vehicle_id" invisible="operation_type not in ('mount', 'dismount')" required="operation_type == 'mount'"/>
                        <field name="position" invisible="operation_type not in ('mount')" required="operation_type == 'mount'"/>
                        <field name="destination_location_id" invisible="operation_type not in ('dismount', 'return_stock')" required="operation_type == 'return_stock'"/>
                        <field name="odometer" invisible="operation_type not in ('mount', 'dismount', 'inspection')"/>
                        <field name="tread_depth" invisible="operation_type not in ('dismount', 'inspection')"/>
                    </group>
                </group>
                <field name="note" placeholder="Additional Notes..."/>
                <footer>
                    <button name="action_apply" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fleet_tire_operation_wizard" model="ir.actions.act_window">
        <field name="name">Update Status</field>
        <field name="res_model">fleet.tire.operation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
