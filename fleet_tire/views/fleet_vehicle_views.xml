<odoo>
    <record id="fleet_vehicle_view_form_inherit_tire" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.tire</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_tires"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-circle-o"
                        help="Tires">
                    <field name="tire_count" widget="statinfo" string="Tires"/>
                </button>
            </div>
            <xpath expr="//notebook" position="inside">
                <page string="Tires">
                     <field name="tire_ids" mode="kanban">
                        <kanban>
                            <field name="name"/>
                            <field name="position"/>
                            <field name="current_tread_depth"/>
                             <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click">
                                        <div class="o_kanban_image">
                                            <!-- Optionally add tire image if field exists -->
                                        </div>
                                        <div class="oe_kanban_details">
                                            <strong><field name="position"/></strong>: <field name="name"/>
                                            <div>Tread: <field name="current_tread_depth"/> mm</div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                     </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
