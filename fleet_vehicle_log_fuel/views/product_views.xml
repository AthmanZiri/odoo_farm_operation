<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_fleet_fuel" model="ir.ui.view">
        <field name="name">product.template.form.inherit.fleet.fuel</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="is_fuel"/>
                    <label for="is_fuel"/>
                </span>
            </div>
            <group name="group_general" position="after">
                <group string="Fuel Details" invisible="not is_fuel">
                    <field name="fuel_location_id"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
