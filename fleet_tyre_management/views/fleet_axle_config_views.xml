<odoo>
    <!-- Position Form View (Inline) -->
    <record id="view_fleet_tyre_position_form" model="ir.ui.view">
        <field name="name">fleet.tyre.position.form</field>
        <field name="model">fleet.tyre.position</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                    </group>
                    <group>
                        <field name="axle_number"/>
                        <field name="side"/>
                        <field name="is_dual"/>
                        <field name="position_type"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Axle Config Tree View -->
    <record id="view_fleet_tyre_axle_config_tree" model="ir.ui.view">
        <field name="name">fleet.tyre.axle.config.tree</field>
        <field name="model">fleet.tyre.axle.config</field>
        <field name="arch" type="xml">
            <list string="Axle Configurations">
                <field name="name"/>
                <field name="position_ids" widget="many2many_tags" string="Positions"/>
            </list>
        </field>
    </record>

    <!-- Axle Config Form View -->
    <record id="view_fleet_tyre_axle_config_form" model="ir.ui.view">
        <field name="name">fleet.tyre.axle.config.form</field>
        <field name="model">fleet.tyre.axle.config</field>
        <field name="arch" type="xml">
            <form string="Axle Configuration">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. 18-Wheeler"/>
                        </h1>
                    </div>
                    <group>
                        <!-- <field name="image_layout" widget="image" class="oe_avatar"/> -->
                    </group>
                    <notebook>
                        <page string="Wheel Positions">
                            <field name="position_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="axle_number"/>
                                    <field name="side"/>
                                    <field name="position_type"/>
                                    <field name="is_dual"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fleet_tyre_axle_config" model="ir.actions.act_window">
        <field name="name">Axle Configurations</field>
        <field name="res_model">fleet.tyre.axle.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define vehicle axle layouts (e.g. 4x2, 6x4).
          </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_fleet_tyre_axle_config"
              name="Axle Configurations"
              parent="menu_tyre_master_data"
              action="action_fleet_tyre_axle_config"
              sequence="30"/>
</odoo>
