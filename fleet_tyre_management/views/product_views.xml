<odoo>
    <record id="product_template_form_view_inherit_tyre" model="ir.ui.view">
        <field name="name">product.template.form.inherit.tyre</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_tyre"/>
                    <label for="is_tyre"/>
                </span>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="tyre_specs" string="Tyre Specifications" invisible="not is_tyre">
                    <group>
                        <group>
                            <field name="tyre_brand_id"/>
                            <field name="tyre_brand" invisible="1"/>
                            <field name="tyre_dimensions"/>
                        </group>
                        <group>
                            <field name="tyre_type"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
