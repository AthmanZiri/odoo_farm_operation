<odoo>
    <!-- Search View for Reporting -->
    <record id="view_fleet_vehicle_tyre_report_search" model="ir.ui.view">
        <field name="name">fleet.vehicle.tyre.report.search</field>
        <field name="model">fleet.vehicle.tyre</field>
        <field name="arch" type="xml">
            <search string="Tyre Analysis">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_fleet_vehicle_tyre_pivot" model="ir.ui.view">
        <field name="name">fleet.vehicle.tyre.pivot</field>
        <field name="model">fleet.vehicle.tyre</field>
        <field name="arch" type="xml">
            <pivot string="Tyre Analysis" sample="1">
                <field name="brand_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_kms" type="measure"/>
                <field name="cpk" type="measure"/>
                <field name="current_tread_depth" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_fleet_vehicle_tyre_graph" model="ir.ui.view">
        <field name="name">fleet.vehicle.tyre.graph</field>
        <field name="model">fleet.vehicle.tyre</field>
        <field name="arch" type="xml">
            <graph string="Tyre Analysis" type="bar" sample="1">
                <field name="brand_id"/>
                <field name="cpk" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action for Cost Analysis -->
    <record id="action_tyre_cost_analysis" model="ir.actions.act_window">
        <field name="name">Cost Analysis</field>
        <field name="res_model">fleet.vehicle.tyre</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_fleet_vehicle_tyre_report_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Analyze tyre costs per kilometer and performance by brand.
          </p>
        </field>
    </record>

    <!-- Action for Tread Wear Analysis -->
    <record id="action_tyre_tread_analysis" model="ir.actions.act_window">
        <field name="name">Tread Wear Analysis</field>
        <field name="res_model">fleet.vehicle.tyre</field>
        <field name="view_mode">pivot,graph</field>
        <!-- <field name="context">{'search_default_mounted': 1}</field> -->
        <field name="search_view_id" ref="view_fleet_vehicle_tyre_report_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Monitor tread wear patterns across your fleet.
          </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_tyre_cost_analysis"
              name="Cost Analysis"
              parent="menu_tyre_reporting"
              action="action_tyre_cost_analysis"
              sequence="10"/>

    <menuitem id="menu_tyre_tread_analysis"
              name="Tread Wear Analysis"
              parent="menu_tyre_reporting"
              action="action_tyre_tread_analysis"
              sequence="20"/>
</odoo>
