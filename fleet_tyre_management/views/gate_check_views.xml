<odoo>
    <!-- Search View -->
    <record id="view_fleet_tyre_gate_check_search" model="ir.ui.view">
        <field name="name">fleet.tyre.gate.check.search</field>
        <field name="model">fleet.tyre.gate.check</field>
        <field name="arch" type="xml">
            <search string="Gate Checks">
                <!-- <field name="name"/> -->
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_fleet_tyre_gate_check_tree" model="ir.ui.view">
        <field name="name">fleet.tyre.gate.check.list</field>
        <field name="model">fleet.tyre.gate.check</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'cancel'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="date"/>
                <field name="vehicle_id"/>
                <field name="gate_scan_type" widget="badge" decoration-success="gate_scan_type == 'check_in'" decoration-warning="gate_scan_type == 'check_out'"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fleet_tyre_gate_check_form" model="ir.ui.view">
        <field name="name">fleet.tyre.gate.check.form</field>
        <field name="model">fleet.tyre.gate.check</field>
        <field name="arch" type="xml">
            <form string="Gate Check">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state == 'done'"/>
                            <field name="vehicle_id" readonly="state == 'done'"/>
                            <field name="gate_scan_type" widget="radio" readonly="state == 'done'"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="state == 'done'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tyres">
                            <field name="line_ids" readonly="state == 'done'">
                                <list editable="bottom" create="0" delete="0" decoration-success="is_scanned">
                                    <field name="is_scanned" column_invisible="1"/>
                                    <field name="tyre_id" readonly="1" force_save="1"/>
                                    <field name="position_id"/>
                                    <field name="current_tread_depth"/>
                                    <field name="new_tread_depth"/>
                                    <field name="odometer"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Sequence -->
    <record id="seq_fleet_tyre_gate_check" model="ir.sequence">
        <field name="name">Gate Check</field>
        <field name="code">fleet.tyre.gate.check</field>
        <field name="prefix">GC/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Action -->
    <record id="action_fleet_gate_check" model="ir.actions.act_window">
        <field name="name">Gate Checks</field>
        <field name="res_model">fleet.tyre.gate.check</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Record a new Gate Check.
          </p>
        </field>
    </record>
</odoo>
