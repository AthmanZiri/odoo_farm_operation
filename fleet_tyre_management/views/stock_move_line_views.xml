<odoo>
    <!-- Inherit Stock Move Line Tree view for Detailed Operations -->
    <record id="view_stock_move_line_operation_tree_inherit_tyre" model="ir.ui.view">
        <field name="name">stock.move.line.operation.tree.inherit.tyre</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <!-- Placing fields once, typically after the lot name/id area -->
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="is_tyre" column_invisible="True"/>
                <field name="rfid_tag" invisible="not is_tyre" optional="show" readonly="0"/>
                <field name="initial_tread_depth" invisible="not is_tyre" optional="show" readonly="0"/>
                <field name="manufacture_date" invisible="not is_tyre" optional="show" readonly="0"/>
                <field name="expiry_date" invisible="not is_tyre" optional="show" readonly="0"/>
            </xpath>
        </field>
    </record>
</odoo>
