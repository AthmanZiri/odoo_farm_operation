<odoo>
    <record id="view_production_lot_form_inherit_tyre" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.tyre</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="after">
                <group name="tyre_info" string="Tyre Information" invisible="not tyre_brand and not rfid_tag">
                    <group>
                        <field name="rfid_tag"/>
                        <field name="tyre_brand" readonly="1"/>
                        <field name="tyre_dimensions" readonly="1"/>
                    </group>
                    <group>
                        <field name="tyre_type" readonly="1"/>
                        <field name="initial_tread_depth"/>
                        <field name="manufacture_date"/>
                        <field name="expiry_date"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
