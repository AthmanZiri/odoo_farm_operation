<odoo>
    <!-- Search View -->
    <record id="view_fleet_tyre_requisition_search" model="ir.ui.view">
        <field name="name">fleet.tyre.requisition.search</field>
        <field name="model">fleet.tyre.requisition</field>
        <field name="arch" type="xml">
            <search string="Tyre Requisitions">
                <field name="name"/>
                <field name="source_location_id"/>
                <field name="dest_location_id"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <!-- <group string="Group By"> -->
                    <!-- <filter string="Source Location" name="group_source" context="{'group_by': 'source_location_id'}"/> -->
                    <!-- <filter string="Destination Location" name="group_dest" context="{'group_by': 'dest_location_id'}"/> -->
                    <!-- <filter string="Status" name="group_state" context="{'group_by': 'state'}"/> -->
                <!-- </group> -->
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_fleet_tyre_requisition_tree" model="ir.ui.view">
        <field name="name">fleet.tyre.requisition.list</field>
        <field name="model">fleet.tyre.requisition</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'cancel'" decoration-info="state == 'draft'" decoration-warning="state == 'open'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="date_request"/>
                <field name="user_id"/>
                <field name="source_location_id"/>
                <field name="dest_location_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fleet_tyre_requisition_form" model="ir.ui.view">
        <field name="name">fleet.tyre.requisition.form</field>
        <field name="model">fleet.tyre.requisition</field>
        <field name="arch" type="xml">
            <form string="Tyre Requisition">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" groups="fleet.fleet_group_manager" invisible="state != 'open'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('done', 'cancel')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" readonly="state != 'draft'"/>
                            <field name="date_request" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="source_location_id" readonly="state != 'draft'"/>
                            <field name="dest_location_id" readonly="state != 'draft'"/>
                            <field name="picking_id" invisible="not picking_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Requested Tyres">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Sequence -->
    <record id="seq_fleet_tyre_requisition" model="ir.sequence">
        <field name="name">Tyre Requisition</field>
        <field name="code">fleet.tyre.requisition</field>
        <field name="prefix">REQ/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Action -->
    <record id="action_fleet_tyre_requisition" model="ir.actions.act_window">
        <field name="name">Tyre Requisitions</field>
        <field name="res_model">fleet.tyre.requisition</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Tyre Requisition.
          </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_fleet_tyre_requisition"
              name="Requisitions"
              parent="menu_tyre_operations"
              action="action_fleet_tyre_requisition"
              sequence="20"/>

</odoo>
