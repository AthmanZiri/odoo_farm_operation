<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rfid_tag_scan_tree" model="ir.ui.view">
        <field name="name">rfid.tag.scan.list</field>
        <field name="model">rfid.tag.scan</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="scan_time"/>
                <field name="epc_code"/>
                <field name="product_id"/>
                <field name="reader_id"/>
                <field name="location_id"/>
            </list>
        </field>
    </record>

    <record id="view_rfid_tag_scan_form" model="ir.ui.view">
        <field name="name">rfid.tag.scan.form</field>
        <field name="model">rfid.tag.scan</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="epc_code"/>
                            <field name="product_id"/>
                            <field name="scan_time"/>
                        </group>
                        <group>
                            <field name="reader_id"/>
                            <field name="reader_ip"/>
                            <field name="location_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rfid_tag_scan" model="ir.actions.act_window">
        <field name="name">Tag Scans</field>
        <field name="res_model">rfid.tag.scan</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_rfid_scans" name="Scan History" parent="menu_rfid_root" action="action_rfid_tag_scan" sequence="20"/>
</odoo>
