<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rfid_reader_tree" model="ir.ui.view">
        <field name="name">rfid.reader.list</field>
        <field name="model">rfid.reader</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="ip_address"/>
                <field name="location_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_rfid_reader_form" model="ir.ui.view">
        <field name="name">rfid.reader.form</field>
        <field name="model">rfid.reader</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Reader Name"/></h1>
                    </div>
                    <group>
                        <group string="Connection">
                            <field name="ip_address"/>
                            <field name="port"/>
                            <field name="serial_port"/>
                        </group>
                        <group string="Configuration">
                            <field name="location_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rfid_reader" model="ir.actions.act_window">
        <field name="name">RFID Readers</field>
        <field name="res_model">rfid.reader</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_rfid_root" name="RFID Integration"/>
    <menuitem id="menu_rfid_readers" name="Readers" parent="menu_rfid_root" action="action_rfid_reader" sequence="10"/>
</odoo>
