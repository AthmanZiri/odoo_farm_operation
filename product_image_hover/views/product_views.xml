<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_hover" model="ir.ui.view">
        <field name="name">product.template.form.inherit.hover</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='image_1920']" position="attributes">
                <attribute name="options">{'preview_image': 'image_128', 'zoom': true}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
